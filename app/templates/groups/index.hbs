{{#view 'window'}}

  {{partial "partials/sidebar"}}
  
  {{#view 'body'}}
  
    
  
    <div class="context-header"></div>
    
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-8">
          <h1>Groups</h1>
          {{#link-to 'groups.create' class="btn btn-primary"}}
            Create a Group
          {{/link-to}}
<table class="table table-hover">
  <tr>
      <th>ID</th>
      <th>Label</th>
      <th>Created At</th>
      <th>Updated At</th>
      <td></td>
  </tr>
  {{#each model}}
  <tr>
    <td>
      {{#link-to 'groups.update' this}}{{id}}{{/link-to}}
    </td>
    <td>
      {{#link-to 'groups.update' this}}{{label}}{{/link-to}}
    </td>
    <td>{{relative-time date=created_at}}</td>
    <td>{{relative-time date=updated_at}}</td>
    <td>
      {{#link-to 'permissions' this.id class="btn btn-primary"}}
        Permissions
      {{/link-to}}
      <button {{action "destroy" this}} class="btn">Delete</button>
    </td>
  </tr>
  {{/each}}
</table>

          
        </div>
      </div>
    </div>

  {{/view}}

{{/view}}





