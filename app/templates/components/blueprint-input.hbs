{{#if is_input}}
  {{em-input label=label property=field}}
{{/if}}

{{#if is_date}}
  {{em-input type="date" label=label property=field}}
{{/if}}

{{#if is_datetime}}
  {{em-input type="datetime-local" label=label property=field}}
{{/if}}

{{#if is_number}}
  {{em-input type="number" label=label property=field}}
{{/if}}

{{#if is_list}}
  {{em-select label=label property=field content=list_items optionValuePath="content" optionLabelPath="content"}}
{{/if}}

{{#if is_belongs_to}}
  {{em-select label=label property=relationship_field content=belongs_to_items optionValuePath="content.id" optionLabelPath="content.id"}}
{{/if}}

{{#if is_text}}
  {{em-text label=label property=field}}
{{/if}}
