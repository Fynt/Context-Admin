{{#context-body}}

<h1>History</h1>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Date</th>
    </tr>
  </thead>
  <tbody>
    {{#each history in controller}}
    <tr>
      <td>
      {{gravatar-image hash=history.author.email_hash size=16}}
      {{history.author.name}} {{history-action action=history.action}} a
      {{#link-to 'items.update' history.extension history.blueprint_slug history.data_id}}
        {{history.blueprint_name}}
      {{/link-to}}
      </td>
      <td>{{relative-time date=history.created_at}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>

{{#if session.loggedIn}}
  <span>{{gravatar-image email=session.email size=34}}</span>
  <button class="btn navbar-btn" {{action 'logout'}}>Logout</button>
  
  <div>{{#link-to 'users'}}Users{{/link-to}}</div>
  <div>{{#link-to 'groups'}}Groups{{/link-to}}</div>

  <div>{{#link-to 'items' 'blog' 'posts'}}Blog Posts{{/link-to}}</div>
  
{{/if}}

{{/context-body}}
