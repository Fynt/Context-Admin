<h1>History</h1>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Date</th>
    </tr>
  </thead>
  <tbody>
    {{#each history in controller}}
    <tr>
      <td>
      {{gravatar-image hash=history.author.email_hash size=16}}
      {{history.author.name}} {{history-action action=history.action}} a
      {{#link-to 'item-update' history.item}}
        {{history.item.blueprint_name}}
      {{/link-to}}
      </td>
      <td>{{relative-time date=history.created_at}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>
