<h1>History</h1>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Date</th>
    </tr>
  </thead>
  <tbody>
    {{#each item in controller}}
    <tr>
      <td>
      {{gravatar-image email=item.author.email size=16}}
      did {{item.action}}</td>
      <td>{{relative-time date=item.created_at}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>
