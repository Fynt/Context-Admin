<table class="table table-hover">
  <tr>
    <td></td>
    {{#each action_type in action_types}}
      <th>{{capitalize-word word=action_type}}</th>
    {{/each}}
  </tr>

  {{#each group in model.groups}}
  <tr>
    <th>{{group.label}}</th>
    {{#each action_type in action_types}}
    <td><input type="checkbox" {{action "update" group}}></td>
    {{/each}}
  </tr>
  {{/each}}
</table>
