{{#context-body}}
  <div class="container">
    <div class="row">
      <div class="col-sm-4 col-sm-offset-4">
        {{#context-panel class="panel-login" heading=panelHeading type=panelType}}
          <div class="text-center">
            {{gravatar-image hash=emailHash size=96}}
          </div>
          <form class="form form-simplified" role="form" {{action "login" on="submit"}}>   
            {{input email labelTranslation='auth.login.email.label' placeholderTranslation='auth.login.email.placeholder'}}
            {{input password labelTranslation='auth.login.password.label' placeholderTranslation='auth.login.password.placeholder'}}
            <div class="row">
              <div class="col-xs-8">
                
              </div>
              <div class="col-xs-4">
                <button type="submit" class="btn btn-block btn-primary">{{t 'auth.login.button'}}</button>
              </div>
            </div>
            
          </form>
        {{/context-panel}}
      </div>
    </div>
  </div>
{{/context-body}}