<h1>Users</h1>

{{#link-to 'users.create' class="btn btn-primary"}}
  Create a User
{{/link-to}}

<table class="table table-hover">
  <tr>
      <th>ID</th>
      <th>Email</th>
      <th>Group</th>
      <th>Last Login</th>
      <th>Created At</th>
      <th>Updated At</th>
      <td></td>
  </tr>
  {{#each model}}
  <tr>
    <td>
      {{#link-to 'users.update' id}}{{id}}{{/link-to}}
    </td>
    <td>
      {{#link-to 'users.update' id}}{{email}}{{/link-to}}
    </td>
    <td>{{group.label}}</td>
    <td>{{relative-time date=last_login}}</td>
    <td>{{relative-time date=created_at}}</td>
    <td>{{relative-time date=updated_at}}</td>
    <td><button {{action "destroy" this}} class="btn">Delete</button></td>
  </tr>
  {{/each}}
</table>
